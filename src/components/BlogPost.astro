---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"post">;
}

// destructuring of property values from an object
const { data, slug } = Astro.props.post;
const { title, publishDate, description } = data;
---

<li>
  <a href={`/blog/${slug}`}>
    <article>
      <h2>{title}</h2>
      <p>{publishDate}</p>
      <p>{description}</p>
    </article>
  </a>
</li>

<!-- styles for the BlogPost  -->
<style>
  li {
    list-style-type: none;
  }

  article {
    padding: 2rem;
  }

  a {
    color: inherit;
    text-decoration: none;
    /* hover transition taken from: https://css-tricks.com/css-link-hover-effects/ */
    position: relative;
  }

  a::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 4px;
    border-radius: 4px;
    background-color: #18272f;
    bottom: 0;
    left: 0;
    transform-origin: right;
    transform: scaleX(0);
    transition: transform 0.3s ease-in-out;
  }

  a:hover::before {
    transform-origin: left;
    transform: scaleX(1);
  }

  h2 {
    color: var(--accent-dark);
  }
</style>
